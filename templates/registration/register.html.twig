{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block body %}
<div class="container login">
    <div class="row">
        <div class="col-12">
            <div class="comment-form-wrap pt-5">
                <h3 class="mb-5">S'inscrire</h3>

                {{ form_start(registrationForm) }}
                <div class="form-group">
                    {{ form_errors(registrationForm.email) }}
                    {{ form_errors(registrationForm.pseudo) }}
                    {{ form_errors(registrationForm.plainPassword) }}
                    {{ form_errors(registrationForm.agreeTerms) }}
                </div>
                <div class="form-group">
                    <label for="email"> {{ form_label(registrationForm.email) }} *</label>
                    <input type="text" name="{{ field_name(registrationForm.email) }}" required class="form-control" id="email">
                </div>
                <div class="form-group">
                    <label for="pseudo">{{ form_label(registrationForm.pseudo) }} *</label>
                    <input type="text" name="{{ field_name(registrationForm.pseudo) }}" required class="form-control" id="pseudo">
                </div>
                <div class="form-group">
                    <label for="password">Mot de passe *</label>
                    <input type="password" name="{{ field_name(registrationForm.plainPassword) }}" required class="form-control" id="password">
                </div>
                {{ form_row(registrationForm.agreeTerms) }}
                <div class="form-group">
                    <button type="submit" value="S" class="btn btn-primary btn-md text-white">S'inscrire</button>
                </div>
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}
