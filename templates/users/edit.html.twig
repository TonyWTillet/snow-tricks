{% extends 'base.html.twig' %}

{% block title %}Mes informations{% endblock %}

{% block body %}

    <div class="site-section">
        <div class="container">

            <div class="row justify-content-center text-center mb-5">
                <div class="col-md-10">
                    <div class="heading-39101 mb-5">
                        <span class="backdrop text-center">{{ app.user.pseudo }}</span>
                        <span class="subtitle-39191">Profil</span>
                        <h3>Modifier mes informations</h3>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-8 mb-5" >
                    {{ form_start(userEditForm) }}
                        <div class="form-group">
                            {{ form_errors(userEditForm.email) }}
                            {{ form_errors(userEditForm.pseudo) }}
                        </div>
                        <div class="form-group row">
                            <div class="col-md-6 mb-4 mb-lg-0">
                                <label>Pseudo</label>
                                <input type="text" class="form-control" name="{{ field_name(userEditForm.pseudo) }}" value="{{ app.user.pseudo }}" placeholder="pseudo">
                            </div>
                            <div class="col-md-6">
                                <label>Email</label>
                                <input type="email" name="{{ field_name(userEditForm.email) }}" class="form-control" value="{{ app.user.email }}" placeholder="email">
                            </div>
                        </div>


                        <div class="form-group row">
                            <div class="col-md-6 mr-auto">
                                <button type="submit" class="btn btn-primary btn-md text-white">Modifier</button>
                            </div>
                        </div>
                    {{ form_end(userEditForm) }}
                </div>
                <div class="col-lg-4 ml-auto">
                    <div class="bg-white p-3 p-md-5">
                        <h3 class="text-black mb-4">Un soucis ?</h3>
                        <ul class="list-unstyled footer-link">
                            <li class="d-block mb-3">
                                <span class="d-block text-black">Contacter l'administrateur du site:</span>
                                <span><a href="mailto:tony.tillet@gmail.com">tony.tillet@gmail.com</a></span>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

        </div>
    </div> <!-- END .site-section -->

{% endblock %}
